---
import { getCollection, render } from 'astro:content';

// Layouts:
import Markdown from '@/components/layouts/markdown.layout.astro';
import Toc from '@/components/toc.astro';
import Article from '@/components/article.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('docs');
  return blogEntries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry, slug: entry.id },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await render(entry);
---

<Markdown frontmatter={entry.data}>
  <Article title={entry.data.title} description={entry.data.description}>
    <Content />
  </Article>
  {
    headings.length > 0 && (
      <div>
        <Toc headings={headings} />
      </div>
    )
  }
</Markdown>
